<?xml version="1.0"?>
<psalm
    totallyTyped="false"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://getpsalm.org/schema/config.xsd"
>
    <projectFiles>
        <directory name="app"/>
        <ignoreFiles>
            <directory name="libs/vendor"/>
            <directory name="vendor"/>
            <directory name="tests"/>
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <MissingReturnType errorLevel="info"/>
        <MissingParamType errorLevel="info"/>
        <PossiblyUnusedMethod errorLevel="info"/>
        <PossiblyUnusedProperty errorLevel="info"/>
    </issueHandlers>
    <plugins>
        <!-- Add Psalm plugins here if needed -->
    </plugins>
    <phpVersion>8.1</phpVersion>
</psalm>
